<Window x:Class="DesktopSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopSearch"
        mc:Ignorable="d"
        Title="Desktop search" Height="350" Width="525"
        SizeToContent="WidthAndHeight">
    <Grid Name="SearchPanel">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="inputRow"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="300px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="textBox" Grid.Row="0" FontSize="24" Padding="0,0,5,0"  Margin="10,5,10,10" TextWrapping="Wrap" TextAlignment="Right" Text="Поиск" HorizontalAlignment="Stretch" />
        <ListView Grid.Row="1" ItemsSource="{Binding SuggestItems}"></ListView>
    </Grid>
</Window>
